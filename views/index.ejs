<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <!-- project CSS File -->
    <link rel="stylesheet" href="css/index.css">
    <!-- Font Awesome Link -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css">
    <!-- Bootsrap Link -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
</head>
<body>
    <!-- contact Heading -->
    <h1 id="heading"><i class="fas fa-address-book"></i><span id="txthead">My Contact List</span></h1>

    <!-- Contact Form Section -->
    <div id="contact_form" class="mt-4">
        <form class="row gy-2 gx-3 align-items-center ms-lg-5" action="/create_contact" method="POST">
            <div class="col-auto">
              <label class="visually-hidden" for="autoSizingInput">Name</label>
              <input type="text" class="form-control" id="autoSizingInput" name="Name" placeholder="Enter Name" required>
            </div>
            <div class="col-auto">
                <label class="visually-hidden" for="autoSizingInput">Name</label>
                <input type="text" class="form-control" id="autoSizingInput" name="Mobile" placeholder="Enter Mobile Number" required>
              </div>
            <div class="col-auto">
              <button type="submit" class="btn btn-success" id="autoSizingInput">Add Contact</button>
            </div>
          </form>
    </div>

    <!-- EJS + Unorder List -->
    <div class="addcontact mt-2">
        <ul class="list-group">
            <%for(var i of list){%>
            <li class="list-group-item list-group-item-action list-group-item-dark d-flex justify-content-between align-items-center">
              <p><%= i.Name %></p>
              <p><%= i.Mobile %></p>
                <span class="badge bg-dark rounded-pill"><a class="dellink" href="delete_contact/?id=<%= i._id %>">Delete<i class=" fas fa-window-close ms-3"></i></a></span>
            </li>
            <%}%>
        </ul>
    </div>
</body>
</html>